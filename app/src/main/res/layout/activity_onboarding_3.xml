<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F2">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Needs"
        android:textSize="24sp"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily=""/>


    <!-- Description TextView -->
    <TextView
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="By using this application, users will find it easier to seek ambulance assistance in the event of an accident or other incident."
        android:textSize="13sp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/light"
        android:textColor="#000000"/>

    <!-- ImageView sebagai tombol Get Started -->
    <ImageView
        android:id="@+id/get_started"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/getstarted"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:contentDescription="Get Started"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>
